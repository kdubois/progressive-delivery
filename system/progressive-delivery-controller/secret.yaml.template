apiVersion: v1
kind: Secret
metadata:
  name: argo-rollouts
  namespace: argo-rollouts
type: Opaque
stringData:
  google_api_key: "REPLACE_WITH_YOUR_GOOGLE_API_KEY"
  github_token: "REPLACE_WITH_YOUR_GITHUB_TOKEN"
  auto_pr_enabled: "false"

# Instructions:
# 1. Copy this file to secret.yaml
# 2. Replace the placeholder values with your actual credentials
# 3. Apply: kubectl apply -f secret.yaml
# 
# Note: secret.yaml is in .gitignore and will not be committed